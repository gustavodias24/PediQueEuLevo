<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ProgressBar
        android:id="@+id/CarregandoImageDoProduto"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imageDoProdutoExibicao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        app:srcCompat="@drawable/image_default" />
    " />

    <TextView
        android:id="@+id/nomeDoProdutoExibicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nome Do produto"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descricaoDoProdutoExibicao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Descrição do produto"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/quantiadeValorCompradoProdutoCarrinho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quantidade Comprada:\nValor Comprado:"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layoutUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_add_carrinho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8BC34A"
            android:text="Adicionar ao Carrinho"
            android:textAllCaps="true"
            app:icon="@drawable/baseline_shopping_cart_checkout_24"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/btn_remover_carrinho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:text="Remover do Carrinho"
            android:textAllCaps="true"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_editar_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Editar"
            android:textAllCaps="true"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="textEnd" />

        <Button
            android:id="@+id/btn_excluir_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:text="Excluir"
            android:textAllCaps="true"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconGravity="textEnd" />
    </LinearLayout>
</LinearLayout>